  "devDependencies": {
    "@types/bun": "latest",
    "better-auth": "^1.2.0",
    "oxlint": "^0.16.1",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.0"
  }
}
