{
  "name": "github-star-gate",
  "version": "0.1.0",
  "description": "Better Auth plugin for GitHub star-gated access control",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./client": {
      "import": {
        "types": "./dist/client.d.ts",
        "default": "./dist/client.js"
      },
      "require": {
        "types": "./dist/client.d.cts",
        "default": "./dist/client.cjs"
      }
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "ci": "bun run lint && bun run typecheck && bun run test",
    "build": "tsup",
    "prepublishOnly": "bun run ci && bun run build"
  },
  "keywords": [
    "better-auth",
    "auth",
    "authentication",
    "github",
    "star",
    "gate",
    "access-control",
    "plugin"
  ],
  "author": "d0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/neiii/stargate-better-auth"
  },
  "bugs": {
    "url": "https://github.com/neiii/stargate-better-auth/issues"
  },
  "homepage": "https://github.com/neiii/stargate-better-auth#readme",
  "peerDependencies": {
    "better-auth": "^1.2.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "better-auth": "^1.2.0",
    "oxlint": "^0.16.1",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.0"
  }
}
